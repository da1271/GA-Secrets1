<h1>Add a new Comment!</h1>
<%= form_for @post do |f| %>



    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :content %>
        <%= f.text_field :content %>
    </div>

    <%= f.submit "Add new Comment!" %>

  <% end %>

  <%= link_to "Back to the list!", posts_path %>
