<h1>Edit this Post!</h1>

<%= form_for @post do |f| %>

    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :content %>
        <%= f.text_field :content %>
    </div>

    <div>
        <%= f.label :anonymous %>
        <%= f.check_box :anonymous %> <br />

    </div>


    <%= f.submit "Edit Post!" %>

<% end %>

<%= link_to "Back to the list!", posts_path %>
